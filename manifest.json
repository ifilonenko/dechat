{
  "manifest_version": 2,
  "name": "Decentralized Chat",
  "version": "1.0.3",
  "description": "Chat with security and privacy.",
  "icons": {
    "16": "messages16.jpg",
    "48": "messages48.jpg",
    "128": "messages.jpg"
  },
  "minimum_chrome_version": "25",

  "browser_action": {
    "default_icon": "messages.jpg",
    "default_title": "DChat",
    "default_popup": "chat/chat.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "jquery-2.1.3.min.js",
      // "asana.js",
      // "api_bridge.js",
      // "extension_server.js",
      // "server_model.js",
      // "options.js",
      "background.js"
      "bootstrap.min.js"
    ]
  },
  "incognito": "split",
  "offline_enabled": false,

  "permissions": [
    "tabs",
    "cookies",
    "webRequest",
    "webRequestBlocking"
  ]
}
